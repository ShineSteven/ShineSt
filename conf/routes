# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /index                         shine.st.blog.controllers.Index.index
GET     /postDetail/:id                      shine.st.blog.controllers.PostDetail.view(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /check                      @shine.st.blog.controllers.CheckEnv.check

GET     /sem/:id                        @shine.st.blog.controllers.CheckEnv.show(id:Int)

GET     /categories                         @shine.st.blog.controllers.Categories.count

GET     /categories/:categoryName           @shine.st.blog.controllers.Categories.allPostByCategory(categoryName:String)

GET     /javascriptRoutes                   shine.st.blog.controllers.Common.javascriptRoutes

GET     /template                         @shine.st.blog.controllers.Index.template